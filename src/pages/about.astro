---
import { Icon } from "astro-icon";
import Technologies from "../components/Technologies.astro";
import PageLayout from "../layouts/PageLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import i18n from "../i18n.js";

const canonical = new URL(`about`, Astro.site);
const cookies = Astro.request.headers.get("cookie") || "";

if (cookies) {
  const language = cookies
    ?.split("; ")
    .find((row) => row.startsWith("translate="))
    ?.split("=")[1];
  i18n.changeLanguage(language);
}

const title = i18n.t("about.title");
const descriptionU = i18n.t("about.description");
const seePdf = i18n.t("about.seepdf");
const item1 = i18n.t("about.item1");
const item2 = i18n.t("about.item2");

const present = {
  icon: "mdi:account-tie-outline",
  name: i18n.t("about.present.name"),
  content: i18n.t("about.present.content"),
};

const steps = [
  {
    icon: "mdi:work",
    name: i18n.t("about.work.synergias.name"),
    date: i18n.t("about.work.synergias.date"),
    content: i18n.t("about.work.synergias.content"),
  },
  {
    icon: "mdi:work",
    name: i18n.t("about.work.cpr.name"),
    date: i18n.t("about.work.cpr.date"),
    content: i18n.t("about.work.cpr.content"),
  },
  {
    icon: "mdi:work",
    name: i18n.t("about.work.solredes.name"),
    date: i18n.t("about.work.solredes.date"),
    content: i18n.t("about.work.solredes.content"),
  },
];

const stepsStudies = [
  {
    icon: "mdi:book-account",
    name: i18n.t("about.education.ing.name"),
    date: i18n.t("about.education.ing.date"),
    content: i18n.t("about.education.ing.content"),
  },
  {
    icon: "mdi:book-account",
    name: i18n.t("about.education.c_nodeJS.name"),
    date: "2023",
    content: "Platzi",
    url: "https://docsdeveloper.s3.amazonaws.com/node.pdf",
    img: "https://docsdeveloper.s3.amazonaws.com/certificados/node.jpg",
  },
  {
    icon: "mdi:book-account",
    name: i18n.t("about.education.c_react.name"),
    date: "2023",
    content: "Platzi",
    url: "https://docsdeveloper.s3.amazonaws.com/react.pdf",
    img: "https://docsdeveloper.s3.amazonaws.com/certificados/react.jpg",
  },
  {
    icon: "mdi:book-account",
    name: i18n.t("about.education.c_angular.name"),
    date: "2023",
    content: "Platzi",
    url: "https://docsdeveloper.s3.amazonaws.com/angular-autenticacion.pdf",
    img: "https://docsdeveloper.s3.amazonaws.com/certificados/angular.jpg",
  },
  {
    icon: "mdi:book-account",
    name: i18n.t("about.education.c_scrum.name"),
    date: "2023",
    content: "Platzi",
    url: "https://docsdeveloper.s3.amazonaws.com/scrum.pdf",
    img: "https://docsdeveloper.s3.amazonaws.com/certificados/scrum.jpg",
  },
  {
    icon: "mdi:book-account",
    name: i18n.t("about.education.tec.name"),
    date: "2016 - 2021",
    content: "Universidad Distrital Francisco José de Caldas",
    url: "https://docsdeveloper.s3.amazonaws.com/diploma_tecno.pdf",
    img: "https://docsdeveloper.s3.amazonaws.com/certificados/diploma.jpg",
  },
  {
    icon: "mdi:book-account",
    name: i18n.t("about.education.sena.name"),
    date: "2013 - 2015",
    content: "SENA",
  },
];

const today = new Date();
const birthDate = new Date("09/03/1999");

let age = today.getFullYear() - birthDate.getFullYear();
const monthDiff = today.getMonth() - birthDate.getMonth();

if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < birthDate.getDate())) {
  age--;
}

let { showHeaderAndFooter } = Astro.props;
if (showHeaderAndFooter == undefined) {
  showHeaderAndFooter = true;
}
---

<PageLayout meta={{ title, canonical }}>
  {showHeaderAndFooter && <Header />}
  <main>
    <section class="h-screen flex items-center justify-center py-8 sm:py-16 lg:py-20 mx-auto">
      <div
        class="container mx-auto px-4 sm:px-6 max-w-3xl prose prose-lg lg:prose-xl dark:prose-invert dark:prose-headings:text-slate-300 prose-md prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-img:rounded-md prose-img:shadow-lg mt-8"
      >
        <video id="myVideo" class="mt-4 rounded-md" autoplay loop muted>
          <source src="/img/fondo.webm" type="video/webm" />
        </video>
        <figure
          class="p-4 italic border-l-4 bg-neutral-100 text-gray-500 dark:text-white border-neutral-500 quote dark:bg-gray-800 shadow-xl hover:shadow-lg transition"
        >
          <p>{descriptionU}</p>
          <figcaption class="text-right">— Juan Carlos Gomez</figcaption>
        </figure>
      </div>
    </section>

    <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-6xl">
      <div class="grid gap-6 row-gap-10 md:grid-cols-2">
        <div class="md:py-6 md:pr-16 text-gray-700 dark:text-gray-400">
          <div class="flex">
            <div class="flex flex-col items-center mr-4">
              <div>
                <div
                  class="flex items-center justify-center w-10 h-10 rounded-full border-blue-500 border-2"
                >
                  <Icon
                    name={present.icon}
                    class="w-6 h-6 text-gray-600 dark:text-slate-200 icon-bold"
                  />
                </div>
              </div>
              {present.content && <div class="w-px h-full bg-gray-300 dark:bg-slate-500" />}
            </div>
            <div class="pt-1 pb-8">
              <p class="mb-2 text-xl font-bold text-gray-900 dark:text-slate-300">
                {present.name}
              </p>
              <p class="text-gray-600 mb-8 dark:text-slate-400">
                {present.content}
              </p>

              <a href="https://docsdeveloper.s3.amazonaws.com/CV+JUAN+GOMEZ.pdf" target="_blank">
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
                  >{seePdf}
                </button>
              </a>
            </div>
          </div>
        </div>
        <div class="relative">
          <img
            src="/img/me.jpg"
            alt="My Portrait"
            class="inset-0 object-cover object-top w-50 rounded-md shadow-lg absolute h-full dark:brightness-75"
          />
        </div>
      </div>
    </section>

    <section class="max-w-6xl mx-auto px-4 py-16 sm:px-6 lg:px-8 lg:py-20">
      <div class="grid md:grid-cols-2 gap-6 row-gap-10">
        <div class="md:pr-16 text-gray-700 dark:text-gray-400">
          <p class="mb-2 text-xl font-bold text-gray-900 dark:text-slate-300">{item1}</p>
          {
            stepsStudies.map((step, index) => (
              <div class="flex pr-8">
                <div class="flex flex-col items-center mr-4">
                  <div>
                    <div class="flex items-center justify-center w-10 h-10 rounded-full border-blue-500 border-2">
                      <Icon
                        name={step.icon}
                        class="w-6 h-6 text-gray-600 dark:text-slate-200 icon-bold"
                      />
                    </div>
                  </div>
                  {step.content && <div class="w-px h-full bg-gray-300 dark:bg-slate-500" />}
                </div>
                <div class="pt-1 pb-8 w-full">
                  <p class="mb-2 text-xl font-bold text-gray-900 dark:text-slate-300">
                    {step.name}
                  </p>
                  <figcaption class="text-right">{step.date}</figcaption>
                  <div class="">
                    <p class="text-gray-600 mb-8 dark:text-slate-400">{step.content}</p>
                    {step.url && (
                      <button id={`showImageButton${index}`}>
                        <Icon name="carbon:task-view" class="w-5 h-5" />
                      </button>
                    )}
                  </div>
                  <div class="flex flex-col items-center">
                    <a href={step.url} target="_blank" class="mt-4">
                      <img
                        id={`myImage${index}`}
                        src={`${step.img}`}
                        style="display: none;"
                        class="mt-4 rounded-lg shadow-md"
                      />
                    </a>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
        <!-- <div class="md:pr-16 text-gray-700 dark:text-gray-400">
          <p class="mb-2 text-xl font-bold text-gray-900 dark:text-slate-300">LOCATION</p>
          <p class="text-gray-600 mb-8 dark:text-slate-400 text-justify">
            I currently reside in Bogota, the capital of Colombia. At {age} years old, I find myself
            in this city full of history, culture and opportunities.
          </p>
          <iframe
            class="location"
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3976.286808828485!2d-74.10568994999899!3d4.563766596003027!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e3f9d5f3dbd4f13%3A0xa2f3b44ddc4df9ab!2sSan%20Crist%C3%B3bal%2C%20Bogot%C3%A1%2C%20Cundinamarca%2C%20Colombia!5e0!3m2!1sen!2sus!4v1623050847556!5m2!1sen!2sus"
            allowfullscreen=""
            loading="lazy"
          >
          </iframe>
        </div> -->
        <div class="md:pr-16 text-gray-700 dark:text-gray-400">
          <p class="mb-2 text-xl font-bold text-gray-900 dark:text-slate-300">{item2}</p>
          {
            steps.map((step) => (
              <div class="flex pr-8">
                <div class="flex flex-col items-center mr-4">
                  <div>
                    <div class="flex items-center justify-center w-10 h-10 rounded-full border-blue-500 border-2">
                      <Icon
                        name={step.icon}
                        class="w-6 h-6 text-gray-600 dark:text-slate-200 icon-bold"
                      />
                    </div>
                  </div>
                  {step.content && <div class="w-px h-full bg-gray-300 dark:bg-slate-500" />}
                </div>
                <div class="pt-1 pb-8">
                  <p class="mb-2 text-xl font-bold text-gray-900 dark:text-slate-300">
                    {step.name}
                  </p>
                  <figcaption class="text-right">{step.date}</figcaption>
                  <p class="text-gray-600 mb-8 dark:text-slate-400">{step.content}</p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>
    <Technologies />
  </main>
  {showHeaderAndFooter && <Footer />}
</PageLayout>

<style>
  .container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }

  .container > div {
    flex: 1 1 50%;
    padding: 10px;
    box-sizing: border-box;
  }

  .location {
    padding-top: 15px;
    height: 450px;
    width: 100%;
    border-radius: 10%;
  }

  #myVideo {
    width: 50%;
    height: auto;
    margin: 0;
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    .container > div {
      flex-basis: 100%;
    }
  }
</style>

<script>
  function toggleImage(index: any) {
    const showImageButton = document.getElementById(`showImageButton${index}`);
    const myImage = document.getElementById(`myImage${index}`);

    if (showImageButton !== null) {
      showImageButton.addEventListener("click", function () {
        if (myImage !== null) {
          if (myImage.style.display === "none") {
            myImage.style.display = "block";
          } else {
            myImage.style.display = "none";
          }
        }
      });
    }
  }

  for (let i = 0; i <= 5; i++) {
    toggleImage(i);
  }
</script>
